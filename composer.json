{
    "name": "mvbsoft/yii2-query-manager",
    "description": "A query generator that allows visually generating a query to a MongoDB or PostgreSQL database using a frontend. Additionally, it provides the ability to use the generated queries for PHP arrays.",
    "type": "yii2-extension",
    "keywords": ["yii2","lcg","query","condition","manager","generator"],
    "license": "GPL-3.0+",
    "authors": [
        {
            "name": "Vitaliy Malinovskyi",
            "email": "malina.mvb@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "yiisoft/yii2": "~2.0.0",
        "nesbot/carbon": "^2.0.0",
        "yiisoft/yii2-mongodb": "~3.0.0",
        "ext-mongodb": "*"
    },
    "autoload": {
        "psr-4": {
            "mvbsoft\\queryManager\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    }
}
